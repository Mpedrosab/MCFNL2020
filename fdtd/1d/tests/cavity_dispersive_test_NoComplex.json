{
    "format": "pyfdtd1d",
    
    "options": {
        "finalTime": 1e-7,
        "timeUnits": "s",
        "cfl": 1
    },

    "coordinates": [
        0.0,
        1.0,
        0.2
    ],

    "elements": [
        [0, 1],
        [2, 2]
    ],

    "grid": {   
        "elemId": 0,
        "steps": 0.005,
        "bounds": ["mur", "mur"]
    },

    "sources": [
        {
            "type": "dipole", 
            "direction": [0.0, 0.0, 1.0],
            "magnitude": {
                "type": "gaussian",
                "gaussianDelay":  0.25e-8,
                "gaussianSpread": 0.025e-8
            },
            "elemId": 1
        }
    ],
    "dispersiveLayers": 
        {
            "permittivity": 2,
            "permeability":1,
            "ap": [
                0
            ],
            "cp": [
                0
            ],
            "unitsFreq": "Hz",
            "startPosition": 0.3,
            "width":  0.5
        },

    "probes": [
        {
            "name": "s1",
            "elemId": 0,
            "__samplingPeriod": 0.1e-9
        }
    ]
}